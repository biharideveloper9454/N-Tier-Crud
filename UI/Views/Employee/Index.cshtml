@model IEnumerable<CommonLayer.Models.ViewModel.EmployeeCompanyViewModel>
@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <div class="row">
        <div class="col-8 offset-2">
            <a class="btn btn-sm btn-info mb-2" asp-controller="employee" asp-action="Create" >Create</a>

            <table class="table table-bordered">
                <tr class="text-center">
                    <th>Id</th>
                    <th>Name</th>
                    <th>City</th>
                    <th>Age</th>
                    <th>Company</th>
                    <th>Action</th>
                </tr>
                @foreach (var d in Model)
                {
                    <tr class="text-center">
                        <td>@d.Id</td>
                        <td>@d.FirstName @d.LastName</td>
                        <td>@d.City</td>
                        <td>@d.Age</td>
                        <td>@d.Company</td>
                        <td>
                            <a class="btn btn-sm btn-primary" asp-controller="employee" asp-action="Edit" asp-route-id="@d.Id">Edit</a>
                            <a class="btn btn-sm btn-danger" asp-controller="employee" asp-action="Delete" asp-route-id="@d.Id">Delete</a>
                            <a class="btn btn-sm btn-info" asp-controller="employee" asp-action="Details" asp-route-id="@d.Id">Details</a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>


