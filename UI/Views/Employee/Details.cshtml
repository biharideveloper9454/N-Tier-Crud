@model IEnumerable<CommonLayer.Models.ViewModel.EmployeeCompanyViewModel>
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutOwn.cshtml";
}
<div class="page-content page-container" id="page-content">
    <div class="padding">
        <div class="row container d-flex justify-content-center">
            <div class="col-xl-6 col-md-12">
                <div class="card user-card-full">
                    @foreach (var d in Model)
                    {
                        <div class="row m-l-0 m-r-0">
                            <div class="col-sm-4 bg-c-lite-green user-profile">
                                <div class="card-block text-center text-white">
                                    <div class="m-b-25"> <img src="https://img.icons8.com/bubbles/100/000000/user.png" class="img-radius" alt="User-Profile-Image"> </div>
                                    <h6 class="f-w-600">@d.Company </h6>
                                    @*<p>@d.Department</p> <i class=" mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"></i>*@
                                </div>
                            </div>
                            <div class="col-sm-8">
                                <div class="card-block">
                                    <h6 class="m-b-20 p-b-5 b-b-default f-w-600 text-center">Employee Details</h6>
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600">Full Name</p>
                                            <h6 class="text-muted f-w-400">@d.FirstName @d.LastName</h6>
                                        </div>
                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600">Gender</p>
                                            <h6 class="text-muted f-w-400">@d.Gender</h6>
                                        </div>
                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600">Age</p>
                                            <h6 class="text-muted f-w-400">@d.Age</h6>
                                        </div>
                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600">City</p>
                                            <h6 class="text-muted f-w-400">@d.City</h6>
                                        </div>
                                    </div>
                                    @*<h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600">Projects</h6>*@
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600">Qualification</p>
                                            <h6 class="text-muted f-w-400">@d.HighestQualification</h6>
                                        </div>
                                        <div class="col-sm-6">
                                            @*<p class="m-b-10 f-w-600">Salary</p>*@
                                            <h6 class="text-muted f-w-400">@d.PassingYear</h6>
                                            <h6 class="text-muted f-w-400">@d.Percentage</h6>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div>
                    <a class="btn btn-sm btn-info" asp-action="index" asp-controller="Employee" asp-route-id="">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>


