@model CommonLayer.Models.ViewModel.EmployeeCreateModel
@{
    ViewData["Title"] = "Reg";
    Layout = "~/Views/Shared/_LayoutOwn.cshtml";
}
<div class="container-fluid" id="grad1">
    <div class="row justify-content-center mt-0">
        <div class="col-8 offset-2">
            <div class="card px-0 pt-4 pb-0 mt-3 mb-3">
                <p class="text-center">Employee Registration</p>
                <div class="row">
                    <div class="col-md-12 mx-0">
                        <form id="msform" method="post" asp-action="Registration" asp-controller="Employee">
                            <!-- progressbar -->
                            <ul id="progressbar">
                                <li class="active" id="account"><strong>Employee Info</strong></li>
                                <li id="personal">Education Info</li>
                                <li id="payment">Experience Info</li>
                            </ul> <!-- fieldsets -->
                            <fieldset>
                                <div class="form-card">
                                    <h2 class="fs-title text-center">Employee Information</h2>
                                    <input type="text" class="form-control" asp-for="FirstName" autocomplete="off" placeholder="Enter first name" />
                                    <input type="text" class="form-control" asp-for="LastName" autocomplete="off" placeholder="Enter last name" />
                                    <label>Gender : </label>
                                    <select class="form-group" asp-for="Gender">
                                        <option value="0">--Select Gender--</option>
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                        <option value="Other">Other</option>
                                    </select>
                                    <input type="text" class="form-control" asp-for="City" autocomplete="off" placeholder="Enter your city name" />
                                    <input type="text" class="form-control" asp-for="Age" autocomplete="off" placeholder="Enter your age in year's" />
                                    <label asp-for="Company"></label>
                                    <select class="form-control" asp-for="Company">
                                        <option value="0">--Select Organization--</option>
                                        @foreach (var o in ViewBag.company)
                                        {
                                            <option value="@o.Id">@o.Name</option>
                                        }
                                    </select>

                                </div>
                                <input type="button" name="next" class="next action-button"
                                       value="Save & Next" />
                            </fieldset>
                            <fieldset>
                                <div class="form-card">
                                    <h2 class="fs-title">Educational Information</h2>
                                    <div class="form-group">
                                        <input type="text" class="form-control" asp-for="HighestQualification" autocomplete="off" placeholder="Enter Your Highest Qualification" />
                                        <input type="text" class="form-control" asp-for="PassingYear" autocomplete="off" placeholder="Enter Your Passing Year" />
                                        <input type="text" class="form-control" asp-for="Percentage" autocomplete="off" placeholder="Enter Your Marks in Percentage" />
                                    </div>


                                </div>
                                <input type="button" name="previous" class="previous action-button-previous"
                                       value="Previous" /> <input type="button" name="next" class="next action-button"
                                                                  value="Save & Next" />
                            </fieldset>
                            <fieldset>
                                <div class="form-card">
                                    <h2 class="fs-title">Experience Information</h2>
                                    <div class="form-group">
                                        <input type="text" class="form-control" asp-for="EmployerName" autocomplete="off" placeholder="Enter Your Last Employer Name" />
                                        <input type="text" class="form-control" asp-for="Experience" autocomplete="off" placeholder="Enter your total experience in months" />
                                        <input type="text" class="form-control" asp-for="LastWorkingDate" autocomplete="off" placeholder="Enter your last working date dd:mm:yy" />
                                    </div>

                                </div>
                                <div class="form-group">
                                <input type="submit" class="btn btn-sm btn-success form-control" value="SUBMIT" />
                            </div>
                        </fieldset>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

